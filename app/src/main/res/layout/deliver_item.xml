<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:layout_marginTop="@dimen/dp_2"
    android:background="@drawable/shape_white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号:"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:layout_margin="@dimen/dp_5"
            />
        <TextView
            android:id="@+id/order_id_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:layout_margin="@dimen/dp_5"
            android:text="24165156156165115"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_margin="@dimen/dp_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/username_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名："
            android:textSize="17sp"
            />
        <TextView
            android:layout_toRightOf="@+id/username_tv"
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456"
            android:textSize="17sp"
            />

        <TextView
            android:layout_below="@+id/username_tv"
            android:id="@+id/phone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="手机号："
            android:textSize="17sp"
            />
        <TextView
            android:layout_below="@+id/username"
            android:layout_toRightOf="@+id/phone_tv"
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12345689"
            android:textSize="17sp"
            />
        <TextView
            android:layout_below="@+id/phone_tv"
            android:id="@+id/addr_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="地址："
            android:textSize="17sp"
            />
        <TextView
            android:layout_below="@+id/addr_tv"
            android:id="@+id/goods_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="购买商品："
            android:textSize="17sp"
            />
        <TextView
            android:id="@+id/btn_confirm"
            android:background="@drawable/blue_button_background"
            android:padding="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="确认送达"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/dp_50"/>
    </RelativeLayout>


</LinearLayout>