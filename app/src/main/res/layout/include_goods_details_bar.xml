<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white">


    <!--下面这部分是需要渐变效果，当作一个整体-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:gravity="center_vertical"
        android:layout_height="44dp"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:id="@+id/back_btn"
            android:text="返回"
            android:textSize="14sp"
            />

        <TextView
            android:id="@+id/tv_bar_goods"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toLeftOf="@+id/tv_bar_material"
            android:layout_marginRight="29dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="商品"/>


        <TextView
            android:id="@+id/tv_bar_material"
            android:layout_width="wrap_content"
            android:visibility="visible"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text=""/>


        <TextView
            android:id="@+id/tv_bar_detail"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/tv_bar_material"
            android:layout_marginLeft="29dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:text="详情"/>

        <View
            android:layout_width="match_parent"
            android:visibility="visible"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="@color/gray"/>

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="7dp"
            android:id="@+id/sale_publish"
            android:paddingVertical="@dimen/dp_5"
            android:paddingLeft="@dimen/dp_9"
            android:paddingRight="@dimen/dp_9"
            android:text="发布"
            android:background="@drawable/blue_button_background"
            android:textSize="14sp"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>


</FrameLayout>
