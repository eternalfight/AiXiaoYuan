<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.PayActivity">
    <RelativeLayout
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/page_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_12"
            android:id="@+id/sale_cancle_btn"
            android:text="取消"
            android:textSize="14sp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp_10"
            android:id="@+id/sale_title"
            android:text="订单确认"
            android:textSize="17sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/LinearLayout"
        android:background="@color/root_bg_color"
        android:layout_below="@+id/page_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/RecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="@android:color/white"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/cart_num"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="共0件商品"
            android:textColor="#000000"
            android:textSize="14dp"
            android:gravity="right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="合计："
            android:textColor="#000000"
            android:textSize="14dp"
            android:layout_marginLeft="9dp"
            />
        <TextView
            android:id="@+id/all_money"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="¥ 0.0"
            android:textSize="16dp"
            android:textColor="@color/red"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/pay_btn"
            android:layout_width="99dp"
            android:layout_height="match_parent"
            android:background="#FF9800"
            android:layout_marginLeft="5dp"
            android:text="确认支付"
            android:textColor="@android:color/white" />
    </LinearLayout>
</RelativeLayout>