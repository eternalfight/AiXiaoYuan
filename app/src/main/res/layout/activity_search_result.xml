<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.SearchResultActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/fanhui"
            android:id="@+id/header_back_image"
            >
        </ImageView>
        <RelativeLayout
            android:clickable="true"
            android:background="@drawable/search_bar_bg"
            android:id="@+id/search_header"
            android:layout_width="match_parent"
            android:layout_height="@dimen/searchBarHiight"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:layout_alignParentBottom="true">

            <Button
                android:id="@+id/search_btn_search"
                android:layout_width="67dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@drawable/search_btn_bg"
                android:text="搜索"
                android:textColor="#CD3811"
                android:textSize="@dimen/textSize"
                android:gravity="center"/>

            <EditText
                android:id="@+id/search_header_tv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:gravity="start|center_vertical"
                android:hint="搜商品标题"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="#A8A8A7"
                android:textSize="@dimen/textSize" />
        </RelativeLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <com.wang.avi.AVLoadingIndicatorView
            android:layout_gravity="center"
            android:id="@+id/avi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/AVLoadingIndicatorView"
            android:visibility="visible"
            app:indicatorName="BallPulseIndicator"
            app:indicatorColor="#FF9800"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycleView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </FrameLayout>


</LinearLayout>