<?xml version="1.0" encoding="utf-8"?>

<!-- 注册界面 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hui="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/root_bg_color"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@color/top_bg_color"
        android:layout_height="@dimen/title_bar_height">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_back_login"
            android:text="返回登录"
            android:layout_marginLeft="15dp"
            android:textColor="@color/white"
            android:layout_centerVertical="true"
            android:textSize="14dp" />
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="注册"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textSize="@dimen/title_main_text_size" />
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:background="@drawable/corner_login_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_phone_et1"
            android:hint="账号"
            android:textSize="12sp"
            android:padding="10dp"
            android:inputType="number"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginLeft="15dp"
        android:background="@drawable/corner_login_bg"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/user_password_et1"
            android:hint="密码"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="12sp"
            android:background="@null"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <CheckBox
            android:id="@+id/check_password_cb1"
            android:layout_width="wrap_content"
            android:button="@drawable/check_user_password_selector"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:background="@drawable/corner_login_bg"
            android:layout_marginRight="15dp"
            android:layout_marginTop="15dp"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="wrap_content">

        <EditText
                android:id="@+id/user_password_et2"
                android:hint="确认密码"
                android:inputType="textPassword"
                android:padding="10dp"
                android:textSize="12sp"
                android:background="@null"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content" />

        <CheckBox
                android:id="@+id/check_password_cb2"
                android:layout_width="wrap_content"
                android:button="@drawable/check_user_password_selector"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <Button
        android:id="@+id/user_register_bt1"
        android:layout_width="match_parent"
        android:text="注 册"
        android:background="@drawable/corners_login_bg"
        android:textColor="@color/white"
        android:layout_margin="15dp"
        android:layout_height="wrap_content" />


</LinearLayout>
